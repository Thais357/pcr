{% extends 'layout/base.html.twig' %}
{% block title %} Sistema de Resultados PCR{% endblock %}
{% block stylesheets %}
  {{ parent() }}
{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif;
    left: 50%;
    transform: translatex(-50%);}
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    
</style>

<section class="jumbotron text-center">
        <div class="container">
          <h1 class="jumbotron-heading">Sistema de Resultados de PCR</h1>
          <p class="lead text-muted">Bienvenido {{ app.user.username }}! </p>
          <p>
           
          </p>
        </div>
      </section>

</div>
 <div class="row ">
           <div class="col-sm-3">
                <div class="callout callout-success">
                  <small class="text-muted">Total de resultados</small>
                  <br>
                  <strong class="h4">{{ totalResultados }}</strong>
                  <div class="chart-wrapper">
                    <canvas id="sparkline-chart-2" width="100" height="30"></canvas>
                  </div>
                </div>
              </div>

              <div class="col-sm-3">
                <div class="callout callout-success">
                  <small class="text-muted">Resultados notificados</small>
                  <br>
                  <strong class="h4">{{ notificados }}</strong>
                  <div class="chart-wrapper">
                    <canvas id="sparkline-chart-2" width="100" height="30"></canvas>
                  </div>
                </div>
              </div>
              <div class="col-sm-3">
                <div class="callout callout-warning">
                  <small class="text-muted">Resultados sin notificar</small>
                  <br>
                  <strong class="h4">{{ sinNotificar }}</strong>
                  <div class="chart-wrapper">
                    <canvas id="sparkline-chart-1" width="100" height="30"></canvas>
                  </div>
                </div>
              </div>
              
              <br>
</div>

{% endblock %}
{% block javascripts %}
  {{ parent() }}


 
{% endblock %}