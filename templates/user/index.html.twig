{% extends 'layout/base.html.twig' %}

{% block title %}{% endblock %}
{% block stylesheets %}
  {{ parent() }}


{% endblock %}
{% block body %}


  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        {% for message in app.session.flashBag.get('success') %}
          <div class="alert alert-success" role="alert">
            {{ message }}
          </div>
        {% endfor %}
          <br>
    <div class="card">
      <div class="card-header">
        <h4>Nuevo usuario 
        <a href="{{path('user_new')}}" class="btn btn-success float-right">Crear Usuario <i class="icon icon-plus"></i></a></h4>
      </div>
      </div>
    <div class="card-body">
           <table id="viajeros" class="table table-hover table-striped">
    <thead>
    <tr>
    <th>ID</th>
    <th>Usuario</th>
    <th>Correo</th>
    <th>Roles</th>
    <th>Acciones</th>
    </tr>
    </thead>
    <tbody>
    {% for v in users %}
    <tr>
      <td>{{ v.id }}</td>
      <td>{{ v.username }}</td>
      <td>{{ v.email }}</td>
      <td>
      {% for rol in v.roles %}
      {{ rol }}
      {% endfor %}
      </td>
  
      <td>
       <a href="{{ path('user_edit',{'id':v.id}) }}" class="btn btn-success">Editar <i class="icon icon-pencil"></i></a>
       <a href="{{ path('user_delete',{"id":v.id}) }}" class="btn btn-danger" alt="Obtener ci y correo" >Eliminar <i class="icon icon-check"></i> </a><br>
        
    </td>
    </tr>
    {% endfor %}
    </tbody>
  </table>
    
    </div>
      </div>
      </div>
    </div>
  </div>

{% endblock %}
{% block javascripts %}
  {{ parent() }}


 
{% endblock %}