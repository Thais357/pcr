{% extends 'layout/base.html.twig' %}
{% block title %}
Rol
{% endblock %}
{% block body %}
    <h1>Role</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ role.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ role.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ role.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('role_index') }}"  class="btn btn-secondary">Volver a la lista</a>

    <a href="{{ path('role_edit', {'id': role.id}) }}"  class="btn btn-success">Editar</a>

    {{ include('role/_delete_form.html.twig') }}
{% endblock %}
